generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Mountain {
  id                  Int       @id @default(autoincrement())
  key                 String    @unique
  altitude            String?
  has_death_zone      Boolean   @default(false)
  first_climbed_date  DateTime?
  createdAt           DateTime  @default(now())
  mountain_img        String?
  country_flag_img    String?

  translations        MountainTranslation[]
}

model MountainTranslation {
  id            Int       @id @default(autoincrement())
  mountain      Mountain  @relation(fields: [mountainId], references: [id])
  mountainId    Int
  language      String
  key          String
  description   String?
  location      String?
  first_climber String?

  @@unique([mountainId, language])
}